<!DOCTYPE html>
<head>
    <title>Create Product</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
 
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>


<style>
  a{text-decoration: none;}
  input {margin-bottom: 12px;}
</style>
</head>
<body>
  <% if(success.length>0){%>
    <div >
        <%=success%>
    </div>
    
    <%}%>
  <h3 class="p-3">Scath</h3>
<div class="row container m-4">
  <div class="col-3">
   <a href="">All Products</a><br>
   <a href="">Create New Product</a>
  </div>
  <div class="col-8">
        <h4>Create New Product</h4>
      
        <form action="/products/create" method="post" enctype="multipart/form-data">
          <div class="form-group">
            <label>Product Image</label>
            <input type="file" name="productImage" class="form-control" required> 
          </div>
          <div class="row form-group">
            <div class="col">

              <input type="text" name="productName"  placeholder="Product Name" class="form-control" required> 
            </div>
            <div class="col">

              <input type="tel" name="productPrice"  placeholder="Product Price" class="form-control" required> 
            </div>
          </div>
          <div class="form-group">
            <input type="tel" name="productDiscountPrice" placeholder="Discount Price" class="form-control" required>
          </div>
          <h5>Panel Details</h5>
          <div class="row form-group">
<div class="col">

  <input type="text" name="backgroundColor"  placeholder="Background Color" class="form-control" required> 
</div>
<div class="col">

  <input type="text" name="panelColor"  placeholder="Panel Color" class="form-control" required> 
</div>
          </div>
          <div class="form-group">
            <input type="text" name="textColor"  placeholder="Text Color" class="form-control" required> 
          </div>
          <button class="btn btn-primary">Create New Product</button>
        </form>

  </div>
</div>
    
        
   
    
    </body>
</html>