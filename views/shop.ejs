<!DOCTYPE html>
<head>
    <title>Shop</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    rel="stylesheet"
  />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <style>
    ul li {
        list-style-type: none;
        color:black;
    }
    .collection {
        margin:80px 0px;
    }
   .filter{
    padding:30px 0px;
   }
   h3{padding:10px}
  </style>
</head>
<body>
<h3>Scath</h3>
<a class="btn btn-danger" href="/user/logout">Logout</a><br>

<a class="btn btn-info my-2" href="/cart">Cart</a>

<div class="container row m-4">
    <div class="col-3">
        
            <div class="dropdown">
                <button class="btn  dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                  Sort By
                </button>
                <ul class="dropdown-menu">
                  <li><a class="dropdown-item" href="#">Popular</a></li>
                  <li><a class="dropdown-item" href="#">Newest</a></li>
                  
                </ul>
              </div>
              <div class="collection">
                <ul>
                    <li>New Collection</li>
                    <li>All Products</li>
                    <li>Discounted Products</li>
                </ul>
              </div>
              <div class="filter">
                <ul>

                    <li>Filter By:</li>
                    <li>
                        Availability
                    </li>
<li>Discount</li>
                </ul>
              </div>
    </div>
    <div class="col-9">
   <%= success %>
<!-- 
        
        <% product.forEach(function(p)
        {%>
            <div class="">
                <%=p.name%>
                <%=p.price%>

            </div>
            <%})%> -->
            <div class="row g-4">
                <% product.forEach(function(p) { %>
                  <div class="col-md-4" style="height:min-content">
                    <div class="card" >
                      <!-- Product Image -->
                      <img src="data:image/jpeg;base64,<%=p.image.toString('base64') %>" class="card-img-top"  style="max-height: 200px; object-fit: contain;">
                      <div class="card-body bg-light" style="background-color:' <%= p.panelColor || black %>';">
                        <!-- Product Name -->
                        <h5 class="card-title"><%= p.name %></h5>
                        <!-- Product Price -->
                        <p class="card-text small"> â‚¹<%= p.price %> 
                            <br>
                           
                            <div class="row d-flex justify-content-between">
                                <!-- Plus Icon at the Start -->
                                <div class="col-auto">
                                  <a href="/addtocart/<%= p._id%>">

                                    <i class="fas fa-plus-circle"></i>
                                  </a>
                                </div>
                            
                                <!-- Minus Icon at the End -->
                                <div class="col-auto">
                                    <i class="fas fa-minus-circle"></i>
                                </div>
                            </div>
                        </p>
                      </div>
                    </div>
                  </div>
                <% }) %>
              </div>
        
    </div>

    </div>
</div>
</body>
</html>